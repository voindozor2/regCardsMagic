<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.regofcardsmagic.web.usersUI.cardsPull.CardspullBrowse"
        messagesPack="com.company.regofcardsmagic.web.usersUI.cardsPull">
    <dialogMode height="600"
                width="800"/>
    <layout>
        <vbox height="100%"
              spacing="true">
            <grid height="100%"
                  spacing="true"
                  width="100%">
                <columns count="8"/>
                <rows>
                    <row>
                        <checkBox id="white"
                                  caption="W"
                                  height="100%"
                                  width="100%"/>
                        <checkBox id="green"
                                  caption="G"
                                  height="100%"
                                  width="100%"/>
                        <checkBox id="red"
                                  caption="R"
                                  height="100%"
                                  width="100%"/>
                        <checkBox id="blue"
                                  caption="U"
                                  height="100%"
                                  width="100%"/>
                        <checkBox id="black"
                                  caption="B"
                                  height="100%"
                                  width="100%"/>
                        <checkBox id="bubna"
                                  caption="BUBNA"
                                  height="100%"
                                  width="100%"/>
                        <checkBox id="colorless"
                                  caption="Z"
                                  height="100%"
                                  width="100%"/>
                        <checkBox id="land"
                                  caption="L"
                                  height="100%"
                                  width="100%"/>
                    </row>
                </rows>
            </grid>
            <grid height="100%"
                  spacing="true"
                  width="100%">
                <columns count="2"/>
                <rows>
                    <row>
                        <textField id="name"
                                   caption="Название"
                                   height="100%"
                                   width="100%"/>
                        <hbox align="MIDDLE_CENTER"
                              height="100%"
                              spacing="true"
                              width="100%">
                            <checkBox id="common"
                                      caption="C"
                                      height="100%"
                                      width="100%"/>
                            <checkBox id="uncommon"
                                      caption="U"/>
                            <checkBox id="rare"
                                      caption="R"/>
                            <checkBox id="mythic"
                                      caption="M"/>
                            <checkBox id="special"
                                      caption="S"/>
                        </hbox>
                    </row>
                </rows>
            </grid>
            <grid height="100%"
                  spacing="true"
                  width="100%">
                <columns count="2"/>
                <rows>
                    <row>
                        <textField id="type"
                                   caption="Тип карты"
                                   height="100%"
                                   width="100%"/>
                        <textField id="painter"
                                   caption="Художник"
                                   height="100%"
                                   width="100%"/>
                    </row>
                </rows>
            </grid>
            <grid height="100%"
                  spacing="true"
                  width="100%">
                <columns count="2"/>
                <rows>
                    <row>
                        <textField id="text"
                                   caption="Текст карты"
                                   height="100%"
                                   width="100%"/>
                        <textField id="painter text"
                                   align="BOTTOM_CENTER"
                                   caption="Художественный текст"
                                   height="100%"
                                   width="100%"/>
                    </row>
                </rows>
            </grid>
            <grid height="100%"
                  spacing="true"
                  width="100%">
                <columns count="1"/>
                <rows>
                    <row>
                        <textField id="tourneyType"
                                   caption="Турнирный тип"
                                   height="100%"
                                   width="100%"/>
                    </row>
                </rows>
            </grid>
            <grid height="100%"
                  spacing="true"
                  width="100%">
                <columns count="2"/>
                <rows>
                    <row>
                        <button id="clear"
                                caption="Очистить"
                                height="100%"
                                width="100%"/>
                        <button id="find"
                                caption="Поиск"
                                height="100%"
                                width="100%"/>
                    </row>
                </rows>
            </grid>
        </vbox>
    </layout>
</window>
